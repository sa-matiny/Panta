<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iust.panta.Notification_page">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_not"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="#ff294067"
        android:contentDescription="@string/seprator_bar" />

    <SearchView

        android:id="@+id/search_not"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_gravity="right"
        android:hint="جستجو..."
        android:icon="@drawable/ic_action_search"
        android:showAsAction="collapseActionView|ifRoom"
        android:actionViewClass="android.widget.SearchView">
    </SearchView>

    <ProgressBar
        android:id="@+id/Profile_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/no_res_label_not"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:textColor="#808080"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notif_list_view"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
