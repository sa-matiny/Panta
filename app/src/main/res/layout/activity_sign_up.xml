<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.iust.panta.SignUp"
    android:id="@+id/signUp">

    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignUp"
    android:id="@+id/signup"
    android:gravity="center_horizontal">

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        android:hint="نام ونام خانوادگی"
        android:gravity="right"
        android:layout_below="@+id/signup_image"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:hint="پست الکترونیکی"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:gravity="right" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:hint="گذرواژه"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="right" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/rePassword"
        android:hint="تکرار گذرواژه"
        android:gravity="end|right"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ثبت نام"
        android:id="@+id/signup_button"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/signup_progress"
        android:layout_marginTop="40dp" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_progress"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/signup"
        android:layout_alignStart="@+id/signup"
        android:layout_below="@+id/rePassword"
        android:indeterminate="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

</LinearLayout>
