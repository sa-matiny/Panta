<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="پروژه جدید"
        android:textColor="@color/text1"
        android:textSize="@dimen/font"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <TextView
        android:id="@+id/Tprojectname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="right"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="40dp"
        android:paddingRight="1dp"
        android:textSize="@dimen/font"
        android:layout_marginTop="40dp"
        android:text="نام پروژه"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text1"
        android:textStyle="bold" />


    <EditText
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:id="@+id/Eprojectname"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginTop="42dp"
        android:layout_toLeftOf="@+id/Tprojectname"
        android:layout_toStartOf="@+id/Tprojectname"
        android:layout_alignParentEnd="false" />


    <TextView
        android:id="@+id/Tmanager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="right"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/font"
        android:layout_marginTop="80dp"
        android:text="نام مدیر پروژه"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text1"
        android:textStyle="bold" />


    <EditText
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:id="@+id/Emanager"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginTop="82dp"
        android:layout_toLeftOf="@+id/Tmanager"
        android:layout_toStartOf="@+id/Tmanager"/>


    <TextView
        android:id="@+id/TprojectInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="right"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/font"
        android:layout_marginTop="120dp"
        android:text="اطلاعات پروژه"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text1"
        android:textStyle="bold" />


    <EditText
        android:layout_height="137dp"
        android:layout_width="337dp"
        android:id="@+id/EprojectInfo"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginTop="162dp"/>


    <ProgressBar
        android:id="@+id/AddProject_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:layout_width="180dp"
        android:layout_height="43dp"
        style="?android:textAppearanceSmall"
        android:text="ثبت پروژه"
        android:id="@+id/add_project_button"
        android:layout_marginTop="400dp"
        android:clickable="true"
        android:onClick="add_project"
        android:textStyle="bold"
        android:background="@color/actionbar"
        android:textColor="@color/background"
        android:textSize="@dimen/font"/>







</RelativeLayout>
