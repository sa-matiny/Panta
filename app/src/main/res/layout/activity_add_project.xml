<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/Tprojectname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="نام پروژه"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/font"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/Eprojectname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/Tprojectname"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="110dp"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="text" />
                <TextView
                    android:id="@+id/TprojectInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/Tprojectname"
                    android:layout_marginTop="20dp"
                    android:text="اطلاعات پروژه"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/font"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/EprojectInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TprojectInfo"
                    android:lines="3"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/font"/>

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/EprojectInfo"
                    android:layout_marginTop="20dp"
                    android:calendarViewShown="false" />

                <Button
                    android:id="@+id/add_project_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/datePicker"
                    android:layout_marginTop="20dp"
                    android:background="@color/actionbar"
                    android:clickable="true"
                    android:onClick="AddProject"
                    android:text="ثبت پروژه"
                    android:textColor="@color/background"
                    android:textSize="@dimen/font"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/AddProject_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="180dp"
                    android:layout_height="43dp"
                    android:layout_below="@+id/EprojectInfo"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="83dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </ScrollView>



</RelativeLayout>

