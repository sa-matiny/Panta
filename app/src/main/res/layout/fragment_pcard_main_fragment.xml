<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/project_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="right"
    android:background="@color/background"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/project_name"
        android:id="@+id/label1"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pro_name"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/label1"
        android:layout_toLeftOf="@+id/label1"
        android:layout_toStartOf="@+id/label1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/project_manager"
        android:id="@+id/label2"
        android:textColor="#ff000000"
        android:layout_below="@+id/label1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pro_manager"
        android:layout_alignBottom="@+id/label2"
        android:layout_toLeftOf="@+id/label2"
        android:layout_toStartOf="@+id/label2" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/project_progress"
        android:id="@+id/label3"
        android:layout_below="@+id/label2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pro_progress"
        android:layout_alignBottom="@+id/label3"
        android:layout_toLeftOf="@+id/label3"
        android:layout_toStartOf="@+id/label3" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/project_info"
        android:id="@+id/label4"
        android:layout_below="@+id/label3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pro_info"
        android:layout_below="@+id/label4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>