<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/TprojectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:gravity="center_vertical|center_horizontal"
                android:text="نام پروژه"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text1"
                android:textSize="@dimen/font"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editprojectname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/TprojectName"
                android:layout_alignParentTop="true"
                android:layout_marginRight="110dp"
                android:background="#ffffff"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/Tprojectinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TprojectName"
                android:layout_marginTop="20dp"
                android:text="اطلاعات پروژه"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text1"
                android:textSize="@dimen/font"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editprojectinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tprojectinfo"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:inputType="textMultiLine"
                android:lines="3"
                android:textSize="@dimen/font" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editprojectinfo"
                android:layout_marginTop="20dp"
                android:calendarViewShown="false" />

            <Button
                android:id="@+id/add_project_button"
                style="?android:textAppearanceSmall"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/datePicker"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/actionbar"
                android:clickable="true"
                android:text="اعمال "
                android:textColor="@color/background"
                android:textSize="@dimen/font"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/AddProject_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="180dp"
                android:layout_height="43dp"
                android:layout_below="@+id/editprojectinfo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="83dp"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

