<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
        android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/project_name"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/label1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/font" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/pro_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@color/light_blue"
            android:contentDescription="@string/seprator_bar" />


        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pro_name"
            android:layout_marginTop="30dp"
            android:text="@string/project_manager"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pro_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/label2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/font" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/pro_manager"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@color/light_blue"
            android:contentDescription="@string/seprator_bar" />

            <TextView
                android:id="@+id/label5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/pro_manager"
                android:layout_marginTop="30dp"
                android:text="@string/project_date"
                android:textColor="@color/text1"
                android:textSize="@dimen/font"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/pro_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/label5"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/font" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/pro_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@color/light_blue"
                android:contentDescription="@string/seprator_bar" />


            <TextView
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                android:layout_below="@+id/pro_date"
            android:layout_marginTop="30dp"
            android:text="@string/project_progress"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />

            <Button
                android:id="@+id/color_bt"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/label3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="#7AB317"
                android:focusable="false" />

            <TextView
                android:id="@+id/pro_progress_p"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/label3"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/color_bt"
                android:textSize="20sp" />

            <Button
                android:id="@+id/color_bt2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/pro_progress_p"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="#666764"
                android:focusable="false" />

            <TextView
                android:id="@+id/pro_progress_p2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/pro_progress_p"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/color_bt2"
                android:textSize="20sp" />


            <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/pro_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@color/light_blue"
            android:contentDescription="@string/seprator_bar" />

        <TextView
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pro_progress"
            android:layout_marginTop="30dp"
            android:text="@string/project_info"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pro_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/label4"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/font" />

            <FrameLayout
                android:id="@+id/pro_progress"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/pro_date"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/label3"
                android:orientation="horizontal" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>