<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/project_name"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pro_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/label3"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/label3"
            android:layout_toStartOf="@+id/label3"
            android:textSize="@dimen/font" />

        <TextView
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/label2"
            android:layout_marginTop="20dp"
            android:text="@string/project_progress"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/label1"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/label1"
            android:layout_toStartOf="@+id/label1"
            android:textSize="@dimen/font" />

        <TextView
            android:id="@+id/pro_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/label4"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/font" />

        <TextView
            android:id="@+id/pro_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/label2"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/label2"
            android:layout_toStartOf="@+id/label2"
            android:textSize="@dimen/font" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/label1"
            android:layout_marginTop="20dp"
            android:text="@string/project_manager"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/label3"
            android:layout_marginTop="20dp"
            android:text="@string/project_info"
            android:textColor="@color/text1"
            android:textSize="@dimen/font"
            android:textStyle="bold" />
    </RelativeLayout>

</FrameLayout>