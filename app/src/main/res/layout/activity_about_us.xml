<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="16dp"
            android:paddingTop="@dimen/activity_vertical_margin">



            <ImageView
                android:id="@+id/PantaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/PantaImage"
                android:gravity="right"
                android:text="پنتا نرم افزاری برای مدیریت پروژه های گروهی است که با پشتیبانی اززبان فارسی قابلیت های کلیدی در اختیار کاربران خود قرار میدهد.
این نرم افزار به طور ویژه برای پلتفرم های اندرویدی طراحی شده است و استفاده شما از این نرم افزار نیازمند مخابره داده می باشد که به نوع اشتراک شما درشبکه مخابراتی بستگی دارد. گروه پنتا هنوز در مراحل اولیه طراحی این نرم افزار میباشد وهرگونه خطا در هنگام کار با نرم افزار به مرور برطرف خواهد شد:)

"
                android:textColor="@color/text1"
                android:lines="13"
                android:textSize="@dimen/font"/>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
