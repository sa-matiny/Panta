<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="right"
    android:orientation="horizontal"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="16dp"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Notification"
                android:id="@+id/switch1"
                android:textColor="@color/text1"
                android:textSize="@dimen/font"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checked="false" />

            <View
                android:layout_width="fill_parent"
                android:id="@+id/switch2"
                android:layout_height="30dp"
                android:textColor="@color/background"
                android:textSize="@dimen/font"
                android:textStyle="bold"
                android:layout_below="@+id/switch1"
                android:layout_alignParentTop="true"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تغییر گذرواژه"
                android:id="@+id/changePassword_button"
                android:layout_below="@+id/switch2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/font"
                android:textStyle="bold"
                android:clickable="true"
                android:textColor="@color/background"
                android:onClick="changePassword"/>




            <View
                android:layout_width="fill_parent"
                android:id="@+id/deleteAccount"
                android:layout_height="10dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/changePassword_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حذف حساب کاربری"
                android:id="@+id/delete_account_button"
                android:layout_below="@+id/deleteAccount"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|right"
                android:onClick="deleteAccount"
                android:textSize="@dimen/font"
                android:clickable="true"
                android:textStyle="bold"
                android:textColor="@color/background" />

            <View
                android:layout_width="fill_parent"
                android:id="@+id/aboutUs"
                android:layout_height="10dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/delete_account_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درباره ما"
                android:id="@+id/aboutUs_button"
                android:layout_below="@+id/aboutUs"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|right"
                android:clickable="true"
                android:onClick="aboutUs"
                android:textSize="@dimen/font"
                android:textStyle="bold"
                android:textColor="@color/background" />
            <View
                android:layout_width="fill_parent"
                android:id="@+id/signOut"
                android:layout_height="10dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/aboutUs_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خروج"
                android:id="@+id/signOut_button"
                android:layout_below="@+id/signOut"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/font"
                android:clickable="true"
                android:textStyle="bold"
                android:textColor="@color/background"
                android:gravity="center_vertical|right"
                android:onClick="signOut"
                />
            <View
                android:layout_width="fill_parent"
                android:id="@+id/Line"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/signOut_button"
                android:paddingBottom="15dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
